
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title>增加出版社</title>
</head>

<body>
    <section id="main-content">
        <section class="wrapper">
            <!-- BASIC FORM ELELEMNTS -->
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="form-panel">
                        <h4 class="mb"><i class="fa fa-angle-right"></i>出版社添加</h4>
                        <form class="form-horizontal style-form" action="/Provider/AddSave" method="post">
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">出版社名称</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="ProviderName" name="ProviderName" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">出版社电话号</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="ProviderTel" name="ProviderTel" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 col-sm-2 control-label">备注</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="Memo" name="Memo" />
                                </div>
                            </div>
                            <input type="submit" class="btn btn-default" value="提交" />
                        </form>
                    </div>
                </div><!-- col-lg-12-->
            </div><!-- /row -->
        </section><! --/wrapper -->
    </section><!-- /MAIN CONTENT -->
</body>
</html>